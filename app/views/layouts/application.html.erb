<!DOCTYPE html>
<html>
  <head>
    <title>CardMaintenance</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= yield %>

    <div class="modal" id="modal_custom" tabindex="-1" aria-labelledby="modal_custom" aria-hidden="true" data-backdrop="static" data-keyboard="false">
      <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header" id="head_mc">

          </div>
          <div class="modal-body" id="body_mc">
            
          </div>
          <div class="modal-footer" id="ftr_mc">
             <button type="button" class="btn btn-danger" onclick="closeModal()">Close</button>
          </div>
        </div>
      </div>
    </div>

  </body>
  <script type="text/javascript">

    function openLogMaintenance(event){
      const car_id = $(event).attr('id')
      $('#modal_custom').toggle()
      $.ajax({
        dataType: 'JSON',
        beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
        type: "get",
        async:false,
        url: "/cars/"+car_id+".json",
        success: function(data) {
          console.log(data);
          //mostrar placas del carro del cual se muestra la info
          var html_h = '<h5>'+data.plate_number+'</h5>'
          $('#head_mc').append(html_h)
          //generar estructura html e insertar log del servicio del carro
          var html_obj = ''
          html_obj += '<div class="row">'
          html_obj += '<div class="col-sm-12">'
          html_obj += '<table class="table">'
          html_obj += '<thead>'
          html_obj += '<tr>'
          html_obj += '<th>Descripci√≥n</th>'
          html_obj += '<th>Status</th>'
          html_obj += '<th>Fecha</th>'
          html_obj += '</tr>'
          html_obj += '</thead>'
          html_obj += '<tbody>'
            for (var i = 0; i < data.services.length; i++) {
              html_obj += '<tr>'
              html_obj += '<td>'+data.services[i].description+'</td>'
              html_obj += '<td>'+data.services[i].status+'</td>'
              html_obj += '<td>'+data.services[i].date+'</td>'
              html_obj += '</tr>'
            }
          html_obj += '</tbody>'
          html_obj += '</table>'
          html_obj += '</div>'
          html_obj += '</div>'
          $('#body_mc').append(html_obj)
        },
        error: function(data){
          console.log('Error:');
          console.log(data);
        }
      });
    }

    function closeModal(){
      $('#modal_custom').toggle()
      $('#body_mc div').remove()
      $('#head_mc h5').remove()

    }

  </script>
</html>
